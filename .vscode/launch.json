{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Client Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": ["tests/client"],
            "console": "integratedTerminal"
        },
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["server.main:app", "--reload", "--env-file", ".env"],
            "console": "integratedTerminal"
        },
        {
            "name": "Server Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/server"],
            "console": "integratedTerminal"
        }
    ]
}
